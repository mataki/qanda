<h1>Listing questions</h1>
<table>
  <h3>New questions</h3>
  <tr>
    <th>title</th>
    <th>IdentityUrl</th>
  </tr>
  <%= render :partial => 'question', :collection => @questions_hash[:new] %>
</table>
<table>
  <h3>Answered questions</h3>
  <tr>
    <th>title</th>
    <th>IdentityUrl</th>
  </tr>
  <%= render :partial => 'question', :collection => @questions_hash[:answered] %>
</table>

<br />

<%= link_to 'New question', new_question_path %>
